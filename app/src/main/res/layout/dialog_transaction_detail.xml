<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_network"
    tools:context=".ui.home.detailToken.DetailTransactionDialogFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtChooseNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:text="Đã gửi BNB"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintBottom_toBottomOf="@+id/txtChooseNetwork"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtChooseNetwork" />

    <View
        android:id="@+id/viewUnderLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey40"
        app:layout_constraintTop_toBottomOf="@+id/txtChooseNetwork" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTextStatus"
        app:layout_constraintTop_toBottomOf="@+id/viewUnderLine"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        android:layout_marginTop="16dp"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:text="@string/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTextDate"
        app:layout_constraintBottom_toBottomOf="@+id/txtTextStatus"
        app:layout_constraintTop_toTopOf="@+id/txtTextStatus"
        app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:text="@string/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtStatus"
        app:layout_constraintTop_toBottomOf="@+id/txtTextStatus"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/green_1"
        android:text="Đã xác nhận"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtDateTime"
        app:layout_constraintBottom_toBottomOf="@+id/txtStatus"
        app:layout_constraintTop_toTopOf="@+id/txtStatus"
        app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="@string/format_date_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey100"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintTop_toBottomOf="@+id/txtStatus" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTextFrom"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        android:layout_marginTop="16dp"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:text="@string/from1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTexTo"
        app:layout_constraintBottom_toBottomOf="@+id/txtTextFrom"
        app:layout_constraintTop_toTopOf="@+id/txtTextFrom"
        app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:text="@string/to1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtFrom"
        app:layout_constraintTop_toBottomOf="@+id/txtTextFrom"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="0x39fB...F5cF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTo"
        app:layout_constraintBottom_toBottomOf="@+id/txtFrom"
        app:layout_constraintTop_toTopOf="@+id/txtFrom"
        app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="0x39fB...F5cF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey100"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintTop_toBottomOf="@+id/txtFrom" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTextNonce"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:text="NONCE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtNonce"
        app:layout_constraintTop_toBottomOf="@+id/txtTextNonce"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="#1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutGas"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNonce"
        android:background="@drawable/bg_layout_from_address"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTextAmount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="@string/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtAmount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="0.3 BNB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTextGas"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTextAmount"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="@string/estimated_gas_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtGas"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAmount"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="0.00025 BNB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtGas"
            android:background="@color/grey100" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTextTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/total_amount"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="0.30025 BNB"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnViewTestnet"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@null"
        android:text="@string/view_one_testnet"
        android:textAllCaps="false"
        android:textColor="@color/blue500"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutGas"
        app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart" />

</androidx.constraintlayout.widget.ConstraintLayout>